@{
  Layout="Shared/_Layout.cshtml";
}
<div id="header-wrapper">
  <h1 id="card-area-header">@Model["foundDisease"].GetName()</h1>
  <p class="ailment-info"><img src = "@Model["foundDisease"].GetImage()"></p>
  <p class="ailment-info">@Model["foundDisease"].GetSymtoms()</p>

</div>
<h1 id="card-area-header">use these remedies to alleviate this ailment</h1>
@if(@Model["remedyList"].Count !=0)
{
  <div id="card-area-ailments">
    @foreach(var remedy in Model["remedyList"])
    {
      <a href="/remedies/@remedy.GetId()">
      <div class="card">
        <img src="@remedy.GetImage()" alt="image of @remedy.GetName()" />
        <div class="info">
          <div class="details-title">
            <span>@remedy.GetName()</span>
          </div>
          <div class="details-body">
            <p>@remedy.GetDescription()</p>
          </div>
        </div>
      </div>
      </a>
    }
  </div>
}
