<div class="container">

@{
  Layout="Shared/_Layout.cshtml";
}
<h1 class="single-ailment-name">@Model["foundDisease"].GetName()</h1>

  <div class="single-ailment">
    <div class="ailment-image">
      <img src = "@Model["foundDisease"].GetImage()">
    </div>
    <div class="ailment-info">
      <p>@Model["foundDisease"].GetSymtoms()</p>
    </div>
  </div>


<h1 id="remedies-for-single-ailment">Remedies for @Model["foundDisease"].GetName()</h1>

@if(@Model["remedyList"].Count !=0)

{

  <div id="card-area-ailments">
    @foreach(var remedy in Model["remedyList"])
    {

      <a href="/remedies/@remedy.GetId()">

      <div class="card">
        <img src="@remedy.GetImage()" alt="image of @remedy.GetName()" />

        <div class="info">
          <div class="details-title">
            <span>@remedy.GetName()</span>
          </div>

          <div class="details-body">
            <p>@remedy.GetDescription()</p>
          </div>
        </div>
      </div>
      </a>
    }
  </div>
}
</div>
